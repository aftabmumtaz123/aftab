<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex justify-between items-center bg-white">
        <h2 class="text-xl font-bold text-gray-800">Skills Management</h2>
        <a href="/admin/skills/add" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors shadow-lg shadow-green-500/30 flex items-center">
            <i class="fas fa-plus mr-2"></i> Add Skill
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 text-gray-500 text-xs uppercase font-medium">
                <tr>
                    <th class="px-6 py-4">Skill Name</th>
                    <th class="px-6 py-4">Proficiency</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 bg-white">
                <% if(skills.length > 0) { %>
                    <% skills.forEach(skill => { %>
                        <tr class="hover:bg-gray-50 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 rounded-lg bg-blue-50 flex items-center justify-center text-blue-600 mr-3 text-xl">
                                        <% if(skill.icon) { %> <i class="<%= skill.icon %>"></i> <% } else { %> <i class="fas fa-code"></i> <% } %>
                                    </div>
                                    <span class="font-medium text-gray-900"><%= skill.name %></span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="w-full max-w-xs">
                                    <div class="flex justify-between mb-1">
                                        <span class="text-xs font-medium text-blue-700 dark:text-white"><%= skill.level %>%</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-blue-600 h-2 rounded-full" style="width: <%= skill.level %>%"></div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end space-x-3 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <a href="/admin/skills/<%= skill._id %>/edit" class="text-blue-500 hover:text-blue-700 p-1 rounded-md hover:bg-blue-50 transition-colors" title="Edit">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form action="/admin/skills/<%= skill._id %>/delete" method="POST" class="inline">
                                        <button type="button" onclick="openDeleteModal(this.closest('form'))" class="text-red-400 hover:text-red-600 p-1 rounded-md hover:bg-red-50 transition-colors" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="px-6 py-8 text-center text-gray-500">No skills found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
