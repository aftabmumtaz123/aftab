<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-100">
        <h2 class="text-2xl font-bold mb-6 text-gray-800"><%= wallet._id ? 'Edit Wallet' : 'Add New Wallet' %></h2>
        
        <form action="<%= wallet._id ? '/admin/finance/wallets/edit/' + wallet._id : '/admin/finance/wallets/add' %>" method="POST" class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Wallet Name</label>
                <input type="text" name="name" value="<%= wallet.name || '' %>" required placeholder="e.g., Cash, HBL, JazzCash" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                    <select name="type" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <% const types = ['Cash', 'Bank', 'Mobile Wallet', 'Credit Card', 'Investment', 'Other']; %>
                        <% types.forEach(t => { %>
                            <option value="<%= t %>" <%= wallet.type === t ? 'selected' : '' %>><%= t %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Initial Balance</label>
                    <input type="number" name="balance" value="<%= wallet.balance || 0 %>" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Currency</label>
                    <input type="text" name="currency" value="<%= wallet.currency || 'PKR' %>" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Color</label>
                    <input type="color" name="color" value="<%= wallet.color || '#3b82f6' %>" class="w-full h-10 rounded-lg border border-gray-300 cursor-pointer">
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4">
                <a href="/admin/finance/wallets" class="px-6 py-2.5 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium">Cancel</a>
                <button type="submit" class="px-6 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-medium shadow-lg shadow-blue-500/30">Save Wallet</button>
            </div>
        </form>
    </div>
</div>
