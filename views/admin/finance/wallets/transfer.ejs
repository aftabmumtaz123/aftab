<div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Transfer Funds</h2>
        <a href="/admin/finance/wallets" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i> Cancel
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <form action="/admin/finance/wallets/transfer" method="POST" class="space-y-6 offline-form">
            <!-- From Wallet -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">From Wallet</label>
                <div class="relative">
                    <select name="fromWallet" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition-all appearance-none bg-white">
                        <option value="" disabled selected>Select source wallet</option>
                        <% wallets.forEach(wallet => { %>
                            <option value="<%= wallet._id %>"><%= wallet.name %> (Current: <%= wallet.currency %> <%= wallet.balance.toLocaleString() %>)</option>
                        <% }) %>
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none">
                        <i class="fas fa-chevron-down text-gray-400"></i>
                    </div>
                </div>
            </div>

            <!-- Arrow Icon -->
            <div class="flex justify-center -my-2 relative z-10">
                <div class="bg-gray-50 rounded-full p-2 border border-gray-200 text-gray-400">
                    <i class="fas fa-arrow-down"></i>
                </div>
            </div>

            <!-- To Wallet -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">To Wallet</label>
                <div class="relative">
                    <select name="toWallet" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition-all appearance-none bg-white">
                        <option value="" disabled selected>Select destination wallet</option>
                        <% wallets.forEach(wallet => { %>
                            <option value="<%= wallet._id %>"><%= wallet.name %> (Current: <%= wallet.currency %> <%= wallet.balance.toLocaleString() %>)</option>
                        <% }) %>
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none">
                        <i class="fas fa-chevron-down text-gray-400"></i>
                    </div>
                </div>
            </div>

            <!-- Amount -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Amount</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <span class="text-gray-500 font-bold">Rs</span>
                    </div>
                    <input type="number" name="amount" required min="1" step="any" placeholder="0.00"
                        class="w-full pl-12 pr-4 py-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition-all">
                </div>
            </div>

            <!-- Date -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                <input type="date" name="date" value="<%= new Date().toISOString().split('T')[0] %>"
                    class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition-all">
            </div>

            <!-- Notes -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Notes (Optional)</label>
                <textarea name="notes" rows="3" placeholder="Reason for transfer..."
                    class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition-all"></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-xl transition-all transform hover:scale-[1.02] shadow-md hover:shadow-lg flex items-center justify-center">
                <i class="fas fa-exchange-alt mr-2"></i> Transfer Funds
            </button>
        </form>
    </div>
</div>
