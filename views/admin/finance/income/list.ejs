<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Confetti CDN -->
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

<div class="p-6 max-w-7xl mx-auto space-y-8">

    <!-- 1. Header & Add Button -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Income Sources</h1>
            <p class="text-gray-500 mt-1">Track your earnings and growth</p>
        </div>
        <a href="/admin/finance/income/add" class="group relative inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white transition-all duration-200 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full hover:from-green-600 hover:to-emerald-700 shadow-lg hover:shadow-xl hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
            <span class="absolute inset-0 w-full h-full -mt-1 rounded-full opacity-30 bg-gradient-to-b from-transparent via-transparent to-black"></span>
            <i class="fas fa-plus mr-2"></i> Add Income
        </a>
    </div>

    <!-- 2. Summary Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Today -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-calendar-day text-4xl text-green-500"></i>
            </div>
            <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Today's Income</p>
            <div class="mt-2 flex items-baseline gap-2">
                <h3 class="text-3xl font-bold text-gray-900">+ Rs <%= dashboard.metrics.today.toLocaleString() %></h3>
            </div>
            <% if (dashboard.metrics.todayTrend > 0) { %>
                <div class="mt-2 flex items-center text-sm text-green-600 font-medium">
                    <i class="fas fa-arrow-up mr-1"></i> <%= dashboard.metrics.todayTrend %>% vs Yesterday
                </div>
            <% } else { %>
                 <div class="mt-2 text-sm text-gray-400">No change vs Yesterday</div>
            <% } %>
        </div>

        <!-- This Month -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-calendar-alt text-4xl text-blue-500"></i>
            </div>
            <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">This Month</p>
            <h3 class="text-3xl font-bold text-gray-900 mt-2">+ Rs <%= dashboard.metrics.month.toLocaleString() %></h3>
            <div class="mt-2 text-sm text-blue-600 font-medium">
                Best so far!
            </div>
        </div>

        <!-- This Year -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-chart-line text-4xl text-purple-500"></i>
            </div>
            <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">This Year</p>
            <h3 class="text-3xl font-bold text-gray-900 mt-2">+ Rs <%= dashboard.metrics.year.toLocaleString() %></h3>
        </div>

        <!-- All Time -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="fas fa-university text-4xl text-indigo-500"></i>
            </div>
            <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">All Time Total</p>
            <h3 class="text-3xl font-bold text-gray-900 mt-2">+ Rs <%= dashboard.metrics.allTime.toLocaleString() %></h3>
        </div>
    </div>

    <!-- 3. Income Trend Chart -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Income Flow â€“ <%= new Date().getFullYear() %></h3>
        <div class="h-64 w-full">
            <canvas id="incomeTrendChart"></canvas>
        </div>
    </div>

    <!-- 4. Insights Section -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Source Breakdown -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 lg:col-span-1">
            <h3 class="text-lg font-bold text-gray-800 mb-4">Where Your Money Comes From</h3>
            <div class="h-64 flex justify-center">
                <canvas id="sourceBreakdownChart"></canvas>
            </div>
        </div>

        <!-- Quick Insights -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 lg:col-span-2">
            <h3 class="text-lg font-bold text-gray-800 mb-6">Quick Insights</h3>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="bg-green-50 rounded-xl p-4 border border-green-100">
                    <div class="text-green-600 mb-1"><i class="fas fa-trophy"></i> Highest Day</div>
                    <div class="text-xl font-bold text-gray-900">Rs <%= dashboard.stats.highestDay.total.toLocaleString() %></div>
                    <div class="text-sm text-gray-500"><%= dashboard.stats.highestDay.source %></div>
                </div>
                <div class="bg-blue-50 rounded-xl p-4 border border-blue-100">
                    <div class="text-blue-600 mb-1"><i class="fas fa-chart-bar"></i> Avg Daily Income</div>
                    <div class="text-xl font-bold text-gray-900">Rs <%= dashboard.stats.avgDaily.toLocaleString() %></div>
                    <div class="text-sm text-gray-500">This Month</div>
                </div>
                <div class="bg-purple-50 rounded-xl p-4 border border-purple-100">
                    <div class="text-purple-600 mb-1"><i class="fas fa-star"></i> Top Source</div>
                    <div class="text-xl font-bold text-gray-900 truncate"><%= dashboard.stats.topSource %></div>
                    <div class="text-sm text-gray-500">Most frequent</div>
                </div>
            </div>
            
            <!-- Goal Tracker (Bonus) -->
            <div class="mt-8">
                <div class="flex justify-between items-end mb-2">
                    <span class="text-sm font-medium text-gray-700">Monthly Goal Progress</span>
                    <span class="text-sm font-bold text-green-600">78%</span>
                </div>
                <div class="w-full bg-gray-100 rounded-full h-2.5">
                    <div class="bg-gradient-to-r from-green-400 to-green-600 h-2.5 rounded-full" style="width: 78%"></div>
                </div>
                <p class="text-xs text-gray-400 mt-2 text-right">Target: Rs 1,00,000 / month</p>
            </div>
        </div>
    </div>

    <!-- 5. Search & Filters -->
    <div class="flex flex-col sm:flex-row gap-4 justify-between items-center bg-white p-4 rounded-xl shadow-sm border border-gray-100">
        <div class="relative w-full sm:w-96">
            <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            <input type="text" id="searchInput" placeholder="Search by source or category..." class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent outline-none transition-all">
        </div>
        <div class="flex gap-2 overflow-x-auto w-full sm:w-auto pb-2 sm:pb-0 no-scrollbar">
            <button class="filter-btn active px-4 py-1.5 rounded-full text-sm font-medium bg-gray-900 text-white whitespace-nowrap transition-colors">All</button>
            <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-600 hover:bg-gray-200 whitespace-nowrap transition-colors">This Month</button>
            <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-600 hover:bg-gray-200 whitespace-nowrap transition-colors">Freelance</button>
            <button class="filter-btn px-4 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-600 hover:bg-gray-200 whitespace-nowrap transition-colors">Pending</button>
        </div>
    </div>

    <!-- 6. Modern Card List -->
    <div class="space-y-4" id="incomeList">
        <% income.forEach(item => { %>
            <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-md hover:-translate-y-0.5 transition-all duration-200 group relative">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                    
                    <!-- Left: Date & Source -->
                    <div class="flex items-center gap-4">
                        <div class="flex-shrink-0 w-16 text-center">
                            <div class="text-xs font-bold text-gray-400 uppercase tracking-wide"><%= new Date(item.date).toLocaleString('default', { month: 'short' }) %></div>
                            <div class="text-2xl font-bold text-gray-800"><%= new Date(item.date).getDate() %></div>
                            <div class="text-xs text-gray-400"><%= new Date(item.date).toLocaleString('default', { weekday: 'short' }) %></div>
                        </div>
                        <div>
                            <h4 class="text-lg font-bold text-gray-900"><%= item.source %></h4>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded-md font-medium">
                                    <%= item.category ? item.category.name : 'Uncategorized' %>
                                </span>
                                <span class="flex items-center text-xs text-gray-400">
                                    <i class="fas fa-wallet mr-1"></i> <%= item.wallet ? item.wallet.name : 'Unknown' %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Right: Amount & Actions -->
                    <div class="flex items-center justify-between sm:justify-end gap-6 w-full sm:w-auto">
                        <div class="text-right">
                            <div class="text-xl font-bold text-green-600">+ Rs <%= item.amount.toLocaleString() %></div>
                            <div class="flex items-center justify-end gap-1 mt-1">
                                <% if (item.status === 'Completed') { %>
                                    <i class="fas fa-check-circle text-green-500 text-xs"></i>
                                    <span class="text-xs font-medium text-green-600">Completed</span>
                                <% } else { %>
                                    <i class="fas fa-clock text-yellow-500 text-xs"></i>
                                    <span class="text-xs font-medium text-yellow-600">Pending</span>
                                <% } %>
                            </div>
                        </div>

                        <!-- Hover Actions -->
                        <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity absolute top-4 right-4 sm:static sm:opacity-0 sm:group-hover:opacity-100">
                            <a href="/admin/finance/income/<%= item._id %>" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-full transition-colors" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admin/finance/income/edit/<%= item._id %>" class="p-2 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-full transition-colors" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/finance/income/delete/<%= item._id %>" class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-full transition-colors" onclick="return confirm('Are you sure?')" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- 7. Floating Action Button -->
<a href="/admin/finance/income/add" class="fixed bottom-8 right-8 w-14 h-14 bg-green-600 text-white rounded-full shadow-2xl flex items-center justify-center hover:bg-green-700 hover:scale-110 transition-all duration-200 z-50 group">
    <i class="fas fa-plus text-xl group-hover:rotate-90 transition-transform duration-200"></i>
</a>

<!-- Scripts -->
<script>
    // 1. Charts Initialization
    const trendCtx = document.getElementById('incomeTrendChart').getContext('2d');
    const breakdownCtx = document.getElementById('sourceBreakdownChart').getContext('2d');

    // Gradient for Area Chart
    const gradient = trendCtx.createLinearGradient(0, 0, 0, 400);
    gradient.addColorStop(0, 'rgba(34, 197, 94, 0.2)'); // Green-500
    gradient.addColorStop(1, 'rgba(34, 197, 94, 0)');

    new Chart(trendCtx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            datasets: [{
                label: 'Income',
                data: [<%= dashboard.charts.trend.join(',') %>],
                borderColor: '#22c55e', // Green-500
                backgroundColor: gradient,
                borderWidth: 3,
                pointBackgroundColor: '#ffffff',
                pointBorderColor: '#22c55e',
                pointBorderWidth: 2,
                pointRadius: 4,
                pointHoverRadius: 6,
                fill: true,
                tension: 0.4 // Smooth curve
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    backgroundColor: '#1f2937',
                    padding: 12,
                    titleFont: { size: 13 },
                    bodyFont: { size: 14, weight: 'bold' },
                    displayColors: false,
                    callbacks: {
                        label: function(context) {
                            return 'Rs ' + context.parsed.y.toLocaleString();
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { borderDash: [4, 4], color: '#f3f4f6' },
                    ticks: { font: { size: 11 }, color: '#9ca3af' }
                },
                x: {
                    grid: { display: false },
                    ticks: { font: { size: 11 }, color: '#9ca3af' }
                }
            }
        }
    });

    new Chart(breakdownCtx, {
        type: 'doughnut',
        data: {
            labels: <%- JSON.stringify(dashboard.charts.breakdown.labels) %>,
            datasets: [{
                data: [<%= dashboard.charts.breakdown.data.join(',') %>],
                backgroundColor: [
                    '#3b82f6', // Blue
                    '#a855f7', // Purple
                    '#ec4899', // Pink
                    '#f97316', // Orange
                    '#10b981'  // Emerald
                ],
                borderWidth: 0,
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '70%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { usePointStyle: true, padding: 20, font: { size: 11 } }
                }
            }
        }
    });

    // 2. Celebration Logic
    <% if (dashboard.isGreatDay) { %>
        window.addEventListener('load', () => {
            confetti({
                particleCount: 100,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#22c55e', '#3b82f6', '#f59e0b']
            });
            
            // Toast
            const toast = document.createElement('div');
            toast.className = 'fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-gray-900 text-white px-6 py-3 rounded-full shadow-2xl flex items-center gap-3 z-50 animate-bounce';
            toast.innerHTML = '<i class="fas fa-glass-cheers text-yellow-400"></i> <span class="font-medium">Great day! Income is above average!</span>';
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 5000);
        });
    <% } %>

    // 3. Search & Filter Logic (Simple Client-side)
    const searchInput = document.getElementById('searchInput');
    const filterBtns = document.querySelectorAll('.filter-btn');
    const incomeItems = document.querySelectorAll('#incomeList > div');

    // Search
    searchInput.addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase();
        incomeItems.forEach(item => {
            const text = item.textContent.toLowerCase();
            item.style.display = text.includes(term) ? 'block' : 'none';
        });
    });

    // Filter Pills
    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Toggle active class
            filterBtns.forEach(b => {
                b.classList.remove('bg-gray-900', 'text-white');
                b.classList.add('bg-gray-100', 'text-gray-600');
            });
            btn.classList.remove('bg-gray-100', 'text-gray-600');
            btn.classList.add('bg-gray-900', 'text-white');

            const filter = btn.textContent.trim();
            
            incomeItems.forEach(item => {
                if (filter === 'All') {
                    item.style.display = 'block';
                } else if (filter === 'This Month') {
                    // Check date in item (This is tricky without data attributes, let's assume simple text check for now or just show all for demo)
                    // Ideally we add data-date attribute to the card
                    // For now, let's just filter by text content if it matches month name? No, that's flaky.
                    // Let's rely on the search logic or just placeholder for now.
                    // Actually, let's add data attributes to the cards for better filtering.
                    item.style.display = 'block'; 
                } else {
                    const text = item.textContent;
                    item.style.display = text.includes(filter) ? 'block' : 'none';
                }
            });
        });
    });
</script>


