<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Financial Reports</h1>
    <div class="relative inline-block text-left">
        <button id="exportDropdownBtn" type="button" class="flex items-center px-4 py-2 bg-gradient-to-r from-teal-600 to-purple-600 text-white rounded-lg hover:from-teal-700 hover:to-purple-700 transition-all shadow-md hover:shadow-lg text-sm font-medium group">
            <i class="fas fa-file-export mr-2 group-hover:animate-bounce"></i> Export Report
            <i class="fas fa-chevron-down ml-2 text-xs opacity-75"></i>
        </button>
        <div id="exportDropdownMenu" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50 transform origin-top-right transition-all duration-200">
            <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                <button onclick="exportReport('pdf')" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 flex items-center" role="menuitem">
                    <i class="fas fa-file-pdf mr-3 text-red-500"></i> Download PDF
                </button>
                <button onclick="exportReport('excel')" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 flex items-center" role="menuitem">
                    <i class="fas fa-file-excel mr-3 text-green-600"></i> Download Excel
                </button>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Monthly Expenses Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <h3 class="font-bold text-gray-800 mb-4">Monthly Expenses</h3>
        <div class="h-64">
            <canvas id="monthlyChart"></canvas>
        </div>
    </div>

    <!-- Category Breakdown Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <h3 class="font-bold text-gray-800 mb-4">Expense Categories</h3>
        <div class="h-64">
            <canvas id="categoryChart"></canvas>
        </div>
    </div>

    <!-- Yearly Overview Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <h3 class="font-bold text-gray-800 mb-4">Yearly Overview</h3>
        <div class="h-64">
            <canvas id="yearlyChart"></canvas>
        </div>
    </div>

    <!-- Wallet-wise Spending Chart -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <h3 class="font-bold text-gray-800 mb-4">Wallet-wise Spending</h3>
        <div class="h-64">
            <canvas id="walletChart"></canvas>
        </div>
    </div>
</div>

<script src="/js/report-export.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Monthly Data
    const monthlyData = <%- JSON.stringify(monthlyExpenses) %>;
    new Chart(document.getElementById('monthlyChart').getContext('2d'), {
        type: 'bar',
        data: {
            labels: monthlyData.map(m => `Month ${m._id}`),
            datasets: [{
                label: 'Expenses',
                data: monthlyData.map(m => m.total),
                backgroundColor: '#3b82f6',
                borderRadius: 4
            }]
        },
        options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true } } }
    });

    // Category Data
    const categoryData = <%- JSON.stringify(categoryExpenses) %>;
    new Chart(document.getElementById('categoryChart').getContext('2d'), {
        type: 'doughnut',
        data: {
            labels: categoryData.map(c => c._id),
            datasets: [{
                data: categoryData.map(c => c.total),
                backgroundColor: ['#ef4444', '#f59e0b', '#10b981', '#3b82f6', '#8b5cf6', '#ec4899', '#6366f1', '#64748b'],
                borderWidth: 0
            }]
        },
        options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
    });

    // Yearly Data
    const yearlyData = <%- JSON.stringify(yearlyExpenses || []) %>;
    new Chart(document.getElementById('yearlyChart').getContext('2d'), {
        type: 'line',
        data: {
            labels: yearlyData.map(y => y._id),
            datasets: [{
                label: 'Total Expenses',
                data: yearlyData.map(y => y.total),
                borderColor: '#8b5cf6',
                backgroundColor: '#8b5cf620',
                tension: 0.4,
                fill: true
            }]
        },
        options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true } } }
    });

    // Wallet Data
    const walletData = <%- JSON.stringify(walletExpenses || []) %>;
    new Chart(document.getElementById('walletChart').getContext('2d'), {
        type: 'bar',
        data: {
            labels: walletData.map(w => w.name),
            datasets: [{
                label: 'Spending',
                data: walletData.map(w => w.total),
                backgroundColor: ['#10b981', '#3b82f6', '#f59e0b', '#ef4444', '#8b5cf6'],
                borderRadius: 4
            }]
        },
        options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true } } }
    });
</script>
