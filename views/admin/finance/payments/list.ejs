<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Payments & Transactions</h1>
    <a href="/admin/finance/payments/add" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
        <i class="fas fa-plus mr-2"></i> Record Transaction
    </a>
</div>

<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-gray-50 text-gray-500 text-xs uppercase">
                <tr>
                    <th class="px-6 py-3">Date</th>
                    <th class="px-6 py-3">Person</th>
                    <th class="px-6 py-3">Type</th>
                    <th class="px-6 py-3">Total Amount</th>
                    <th class="px-6 py-3">Paid / Due</th>
                    <th class="px-6 py-3">Status</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% payments.forEach(p => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-gray-500"><%= new Date(p.date).toLocaleDateString() %></td>
                        <td class="px-6 py-4 font-medium text-gray-900"><%= p.person.name %></td>
                        <td class="px-6 py-4">
                            <% if(p.type === 'send') { %>
                                <span class="text-red-600 bg-red-50 px-2 py-1 rounded text-xs font-medium"><i class="fas fa-arrow-up mr-1"></i> Sent</span>
                            <% } else { %>
                                <span class="text-green-600 bg-green-50 px-2 py-1 rounded text-xs font-medium"><i class="fas fa-arrow-down mr-1"></i> Received</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 font-bold text-gray-900">Rs <%= p.amount.toLocaleString() %></td>
                        <td class="px-6 py-4 text-sm">
                            <% if(p.status === 'Completed') { %>
                                <span class="text-green-600">Fully Paid</span>
                            <% } else if (p.status === 'Pending') { %>
                                <span class="text-red-500">Due: <%= p.amount.toLocaleString() %></span>
                            <% } else if (p.status === 'Partial') { %>
                                <div class="flex flex-col">
                                    <span class="text-green-600 text-xs">Paid: <%= (p.paidAmount || 0).toLocaleString() %></span>
                                    <span class="text-red-500 text-xs">Due: <%= (p.amount - (p.paidAmount || 0)).toLocaleString() %></span>
                                </div>
                            <% } else { %>
                                <span class="text-red-600 font-bold">Overdue</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded-full text-xs font-medium 
                                <%= p.status === 'Completed' ? 'bg-green-100 text-green-800' : 
                                   p.status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 
                                   p.status === 'Partial' ? 'bg-blue-100 text-blue-800' : 
                                   'bg-red-100 text-red-800' %>">
                                <%= p.status %>
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <a href="/admin/finance/payments/edit/<%= p._id %>" class="text-blue-600 hover:text-blue-800 mr-3"><i class="fas fa-edit"></i></a>
                            <a href="/admin/finance/payments/delete/<%= p._id %>" class="text-red-600 hover:text-red-800 delete-btn" data-name="this transaction"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
