<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-100">
        <h2 class="text-2xl font-bold mb-6 text-gray-800"><%= payment._id ? 'Edit Transaction' : 'Record Transaction' %></h2>
        
        <form action="<%= payment._id ? '/admin/finance/payments/edit/' + payment._id : '/admin/finance/payments/add' %>" method="POST" class="space-y-6">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Person</label>
                    <select name="person" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select Person</option>
                        <% people.forEach(p => { %>
                            <option value="<%= p._id %>" <%= (payment.person && payment.person.toString() === p._id.toString()) ? 'selected' : '' %>><%= p.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Transaction Type</label>
                    <select name="type" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="send" <%= payment.type === 'send' ? 'selected' : '' %>>I Gave / Sent</option>
                        <option value="receive" <%= payment.type === 'receive' ? 'selected' : '' %>>I Got / Received</option>
                    </select>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Total Amount</label>
                    <div class="relative">
                        <span class="absolute left-4 top-2 text-gray-500">Rs.</span>
                        <input type="number" name="amount" value="<%= payment.amount || '' %>" required min="0" class="w-full pl-12 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                    <input type="date" name="date" value="<%= payment.date ? new Date(payment.date).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select name="status" id="statusSelect" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" onchange="togglePaidAmount()">
                        <option value="Completed" <%= payment.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                        <option value="Pending" <%= payment.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                        <option value="Partial" <%= payment.status === 'Partial' ? 'selected' : '' %>>Partial</option>
                        <option value="Overdue" <%= payment.status === 'Overdue' ? 'selected' : '' %>>Overdue</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Wallet (Source/Dest)</label>
                    <select name="wallet" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select Wallet</option>
                        <% wallets.forEach(w => { %>
                            <option value="<%= w._id %>" <%= (payment.wallet && payment.wallet.toString() === w._id.toString()) ? 'selected' : '' %>><%= w.name %> (<%= w.currency %> <%= w.balance %>)</option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div id="paidAmountField" class="<%= payment.status === 'Partial' ? '' : 'hidden' %>">
                <label class="block text-sm font-medium text-gray-700 mb-2">Amount Paid So Far</label>
                <div class="relative">
                    <span class="absolute left-4 top-2 text-gray-500">Rs.</span>
                    <input type="number" name="paidAmount" value="<%= payment.paidAmount || '' %>" min="0" class="w-full pl-12 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Notes (Optional)</label>
                <textarea name="notes" rows="3" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"><%= payment.notes || '' %></textarea>
            </div>

            <div class="flex justify-end space-x-4 pt-4">
                <a href="/admin/finance/payments" class="px-6 py-2.5 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium">Cancel</a>
                <button type="submit" class="px-6 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-medium shadow-lg shadow-blue-500/30">Save Transaction</button>
            </div>
        </form>
    </div>
</div>

<script>
    function togglePaidAmount() {
        const status = document.getElementById('statusSelect').value;
        const field = document.getElementById('paidAmountField');
        if (status === 'Partial') {
            field.classList.remove('hidden');
        } else {
            field.classList.add('hidden');
        }
    }
</script>
