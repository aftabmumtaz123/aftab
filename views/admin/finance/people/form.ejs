<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-100">
        <h2 class="text-2xl font-bold mb-6 text-gray-800"><%= person._id ? 'Edit Person' : 'Add New Person' %></h2>
        
        <form action="<%= person._id ? '/admin/finance/people/edit/' + person._id : '/admin/finance/people/add' %>" method="POST" class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                <input type="text" name="name" value="<%= person.name || '' %>" required class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Relationship Type</label>
                <select name="type" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <% const types = ['Friend', 'Family', 'Business', 'Shop', 'Other']; %>
                    <% types.forEach(t => { %>
                        <option value="<%= t %>" <%= person.type === t ? 'selected' : '' %>><%= t %></option>
                    <% }) %>
                </select>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone (Optional)</label>
                    <input type="text" name="phone" value="<%= person.phone || '' %>" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email (Optional)</label>
                    <input type="email" name="email" value="<%= person.email || '' %>" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Address (Optional)</label>
                <input type="text" name="address" value="<%= person.address || '' %>" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Notes</label>
                <textarea name="notes" rows="3" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"><%= person.notes || '' %></textarea>
            </div>

            <div class="flex justify-end space-x-4 pt-4">
                <a href="/admin/finance/people" class="px-6 py-2.5 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium">Cancel</a>
                <button type="submit" class="px-6 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 font-medium shadow-lg shadow-blue-500/30">Save Person</button>
            </div>
        </form>
    </div>
</div>
