<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Expenses</h1>
    <a href="/admin/finance/expenses/add" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
        <i class="fas fa-plus mr-2"></i> Add Expense
    </a>
</div>

<!-- Dashboard Summary -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Row 1: Circular Progress Cards -->
    
    <!-- Today's Expense -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center justify-center">
        <p class="text-gray-500 text-sm font-medium mb-4">Today's Expense</p>
        <div class="relative w-32 h-32">
            <svg class="w-full h-full transform -rotate-90">
                <circle cx="64" cy="64" r="56" stroke="#f3f4f6" stroke-width="8" fill="none"></circle>
                <circle cx="64" cy="64" r="56" stroke="#3b82f6" stroke-width="8" fill="none" stroke-dasharray="351.86" stroke-dashoffset="0"></circle>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-xl font-bold text-blue-500"><%= dashboard.today %></span>
            </div>
        </div>
    </div>

    <!-- Yesterday's Expense -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center justify-center">
        <p class="text-gray-500 text-sm font-medium mb-4">Yesterday's Expense</p>
        <div class="relative w-32 h-32">
            <svg class="w-full h-full transform -rotate-90">
                <circle cx="64" cy="64" r="56" stroke="#f3f4f6" stroke-width="8" fill="none"></circle>
                <circle cx="64" cy="64" r="56" stroke="#f97316" stroke-width="8" fill="none" stroke-dasharray="351.86" stroke-dashoffset="<%= 351.86 * 0.25 %>"></circle> <!-- Static offset for visual as per image/mockup logic, ideally dynamic but 100% is fine too -->
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-xl font-bold text-orange-500"><%= dashboard.yesterday %></span>
            </div>
        </div>
    </div>

    <!-- Last 7 Days Expense -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center justify-center">
        <p class="text-gray-500 text-sm font-medium mb-4">Last 7day's Expense</p>
        <div class="relative w-32 h-32">
            <svg class="w-full h-full transform -rotate-90">
                <circle cx="64" cy="64" r="56" stroke="#f3f4f6" stroke-width="8" fill="none"></circle>
                <circle cx="64" cy="64" r="56" stroke="#14b8a6" stroke-width="8" fill="none" stroke-dasharray="351.86" stroke-dashoffset="0"></circle>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-xl font-bold text-teal-500"><%= dashboard.last7Days %></span>
            </div>
        </div>
    </div>

    <!-- Last 30 Days Expense -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center justify-center">
        <p class="text-gray-500 text-sm font-medium mb-4">Last 30day's Expenses</p>
        <div class="relative w-32 h-32">
            <svg class="w-full h-full transform -rotate-90">
                <circle cx="64" cy="64" r="56" stroke="#f3f4f6" stroke-width="8" fill="none"></circle>
                <circle cx="64" cy="64" r="56" stroke="#ef4444" stroke-width="8" fill="none" stroke-dasharray="351.86" stroke-dashoffset="0"></circle>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-xl font-bold text-red-500"><%= dashboard.last30Days %></span>
            </div>
        </div>
    </div>

    <!-- Row 2: Text Summaries -->
    
    <!-- Current Year Expenses -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center justify-center h-40">
        <p class="text-gray-500 text-sm font-medium mb-2">Current Year Expenses</p>
        <span class="text-2xl font-bold text-red-500"><%= dashboard.currentYear %></span>
    </div>

    <!-- Total Expenses -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center justify-center h-40">
        <p class="text-gray-500 text-sm font-medium mb-2">Total Expenses</p>
        <span class="text-2xl font-bold text-red-500"><%= dashboard.total %></span>
    </div>
</div>

<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid / Due</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">End Date</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% expenses.forEach(expense => { %>
                        <tr class="hover:bg-gray-50 group">
                            <td class="px-6 py-4 text-sm text-gray-500 whitespace-nowrap">
                                <%= new Date(expense.date).toLocaleDateString() %>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <span class="w-2 h-2 rounded-full mr-2 
                                        <%= expense.status === 'Paid' ? 'bg-green-500' : 
                                           expense.status === 'Partial' ? 'bg-orange-500' : 
                                           expense.status === 'Overdue' ? 'bg-red-500' : 'bg-gray-400' %>"></span>
                                    <span class="font-medium text-gray-900"><%= expense.title %></span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                <span class="px-2 py-1 bg-gray-100 rounded text-xs"><%= expense.category %></span>
                            </td>
                            <td class="px-6 py-4 text-sm font-bold text-gray-900">
                                Rs <%= expense.amount.toLocaleString() %>
                            </td>
                            <td class="px-6 py-4 text-sm">
                                <% if(expense.status === 'Paid') { %>
                                    <span class="text-green-600 font-medium">Fully Paid</span>
                                <% } else { 
                                    const percent = Math.min(100, Math.round(((expense.paidAmount || 0) / expense.amount) * 100));
                                %>
                                    <div class="flex flex-col gap-1 min-w-[140px]">
                                        <div class="flex justify-between text-xs">
                                            <span class="text-green-600">Paid: <%= (expense.paidAmount || 0).toLocaleString() %></span>
                                            <span class="text-red-500">Due: <%= expense.amountDue.toLocaleString() %></span>
                                        </div>
                                        <div class="w-full bg-gray-100 rounded-full h-1.5 overflow-hidden">
                                            <div class="bg-green-500 h-1.5 rounded-full" style="width: <%= percent %>%"></div>
                                        </div>
                                    </div>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 text-sm">
                                <% if(expense.endDate && expense.status !== 'Paid') { 
                                    const daysLeft = Math.ceil((new Date(expense.endDate) - new Date()) / (1000 * 60 * 60 * 24));
                                %>
                                    <span class="<%= daysLeft < 0 ? 'text-red-600 font-bold' : 'text-gray-500' %>">
                                        <%= new Date(expense.endDate).toLocaleDateString() %>
                                        <% if(daysLeft < 0) { %> <i class="fas fa-exclamation-circle ml-1"></i> <% } %>
                                    </span>
                                <% } else { %>
                                    <span class="text-gray-400">-</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 text-right text-sm font-medium">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <a href="/admin/finance/expenses/<%= expense._id %>" class="text-blue-600 hover:text-blue-900 bg-blue-50 p-2 rounded-lg hover:bg-blue-100 transition-colors" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/finance/expenses/edit/<%= expense._id %>" class="text-indigo-600 hover:text-indigo-900 bg-indigo-50 p-2 rounded-lg hover:bg-indigo-100 transition-colors" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/admin/finance/expenses/delete/<%= expense._id %>" class="text-red-600 hover:text-red-900 bg-red-50 p-2 rounded-lg hover:bg-red-100 transition-colors" onclick="return confirm('Are you sure?')" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
        </table>
    </div>
</div>
