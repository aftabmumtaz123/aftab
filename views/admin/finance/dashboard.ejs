<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Net Worth (Total Wallet Balance) -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <p class="text-gray-500 text-sm font-medium">Net Worth</p>
        <h3 class="text-2xl font-bold text-gray-900 mt-1">Rs <%= summary.totalWalletBalance.toLocaleString() %></h3>
        <p class="text-xs text-green-600 mt-2 flex items-center">
            <i class="fas fa-circle mr-1" style="font-size: 6px;"></i> Across all wallets
        </p>
    </div>

    <!-- Total Income -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <p class="text-gray-500 text-sm font-medium">Total Income</p>
        <h3 class="text-2xl font-bold text-green-600 mt-1">Rs <%= summary.totalIncome.toLocaleString() %></h3>
        <p class="text-xs text-gray-400 mt-2">Lifetime earnings</p>
    </div>

    <!-- Total Expenses -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <p class="text-gray-500 text-sm font-medium">Total Expenses</p>
        <h3 class="text-2xl font-bold text-red-600 mt-1">Rs <%= summary.totalExpenses.toLocaleString() %></h3>
        <p class="text-xs text-gray-400 mt-2">Lifetime spending</p>
    </div>

    <!-- Pending Receive -->
    <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
        <p class="text-gray-500 text-sm font-medium">Pending to Receive</p>
        <h3 class="text-2xl font-bold text-blue-600 mt-1">Rs <%= summary.pendingToReceive.toLocaleString() %></h3>
        <p class="text-xs text-orange-500 mt-2 flex items-center">
            <i class="fas fa-circle mr-1" style="font-size: 6px;"></i> <%= summary.pendingToSend.toLocaleString() %> to pay
        </p>
    </div>
</div>

<!-- Wallets Section (ATM Cards) -->
<div class="mb-8">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl font-bold text-gray-800">My Wallets</h3>
        <a href="/admin/finance/wallets" class="text-blue-600 text-sm font-medium hover:underline">View All</a>
    </div>
    
    <div class="flex gap-6 overflow-x-auto pb-6 custom-scrollbar snap-x">
        <!-- Add New Wallet Card -->
        <a href="/admin/finance/wallets/add" class="flex-shrink-0 w-80 h-48 bg-white border-2 border-dashed border-gray-300 rounded-3xl flex flex-col items-center justify-center text-gray-400 hover:border-blue-500 hover:text-blue-500 transition-all snap-center group">
            <div class="w-12 h-12 rounded-full bg-gray-100 group-hover:bg-blue-50 flex items-center justify-center mb-3 transition-colors">
                <i class="fas fa-plus text-xl"></i>
            </div>
            <span class="font-bold">Add New Wallet</span>
        </a>

        <% wallets.forEach((w, index) => { %>
            <!-- Wallet Card -->
            <div class="flex-shrink-0 w-80 h-48 rounded-3xl p-6 text-white relative overflow-hidden shadow-lg snap-center transform hover:-translate-y-1 transition-all duration-300" 
                 style="background: linear-gradient(135deg, <%= w.color || '#3b82f6' %> 0%, <%= w.color ? w.color + 'dd' : '#1d4ed8' %> 100%);">
                
                <!-- Background Pattern -->
                <div class="absolute top-0 right-0 w-40 h-40 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl"></div>
                <div class="absolute bottom-0 left-0 w-32 h-32 bg-black/10 rounded-full translate-y-1/2 -translate-x-1/2 blur-xl"></div>
                
                <div class="relative z-10 flex flex-col h-full justify-between">
                    <div class="flex justify-between items-start">
                        <div class="flex flex-col">
                            <span class="text-white/80 text-xs font-medium tracking-wider uppercase"><%= w.type %></span>
                            <h4 class="font-bold text-lg tracking-wide"><%= w.name %></h4>
                        </div>
                        <i class="fas fa-wifi text-white/50 rotate-90"></i>
                    </div>

                    <div class="flex items-center gap-3 my-2">
                        <div class="w-10 h-7 bg-yellow-200/80 rounded flex items-center justify-center overflow-hidden relative">
                            <div class="absolute w-full h-[1px] bg-black/20 top-1/3"></div>
                            <div class="absolute w-full h-[1px] bg-black/20 bottom-1/3"></div>
                            <div class="absolute h-full w-[1px] bg-black/20 left-1/3"></div>
                            <div class="absolute h-full w-[1px] bg-black/20 right-1/3"></div>
                        </div>
                        <i class="fas fa-rss text-xl text-white/80 rotate-90"></i>
                    </div>

                    <div>
                        <p class="text-xs text-white/80 mb-1 font-mono">**** **** **** <%= w._id.toString().slice(-4) %></p>
                        <div class="flex justify-between items-end">
                            <h3 class="text-2xl font-bold tracking-tight"><%= w.currency %> <%= w.balance.toLocaleString() %></h3>
                            <div class="flex flex-col items-end">
                                <span class="text-[10px] text-white/60 uppercase">Valid Thru</span>
                                <span class="text-xs font-mono">12/28</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- Recent Activity Feed -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
        <h3 class="font-bold text-gray-800">Recent Activity</h3>
        <span class="text-xs text-gray-500">Combined Stream</span>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left text-sm">
            <tbody class="divide-y divide-gray-100">
                <% recentActivity.forEach(item => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="w-8 h-8 rounded-full flex items-center justify-center mr-3 
                                    <%= item.type === 'expense' ? 'bg-red-100 text-red-600' : 
                                       item.type === 'income' ? 'bg-green-100 text-green-600' : 
                                       'bg-blue-100 text-blue-600' %>">
                                    <i class="fas <%= item.type === 'expense' ? 'fa-receipt' : 
                                                   item.type === 'income' ? 'fa-money-bill-wave' : 
                                                   'fa-exchange-alt' %> text-xs"></i>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">
                                        <%= item.type === 'expense' ? item.title : 
                                           item.type === 'income' ? item.source : 
                                           (item.type === 'send' ? 'Sent to ' + item.person.name : 'Received from ' + item.person.name) %>
                                    </p>
                                    <p class="text-xs text-gray-500"><%= new Date(item.date).toLocaleDateString() %></p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <span class="font-bold <%= item.type === 'expense' || (item.type === 'payment' && item.type === 'send') ? 'text-red-600' : 'text-green-600' %>">
                                <%= item.type === 'expense' || (item.type === 'payment' && item.type === 'send') ? '-' : '+' %> 
                                Rs <%= item.amount.toLocaleString() %>
                            </span>
                        </td>
                    </tr>
                <% }) %>
                <% if (recentActivity.length === 0) { %>
                    <tr>
                        <td colspan="2" class="px-6 py-8 text-center text-gray-500">No recent activity found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
