<div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <a href="/admin/testimonials" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1 class="text-2xl font-bold text-gray-800">Edit Testimonial</h1>
            </div>
            <p class="text-gray-500 text-sm ml-7">Update client testimonial</p>
        </div>
    </div>

    <form action="/admin/testimonials/<%= testimonial._id %>/edit" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="fas fa-quote-left text-blue-500"></i> Testimonial Details
                </h2>
                
                <div class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Client Name <span class="text-red-500">*</span></label>
                            <input type="text" name="name" value="<%= testimonial.name %>" required class="w-full border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Position/Role <span class="text-red-500">*</span></label>
                            <input type="text" name="position" value="<%= testimonial.position %>" required class="w-full border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Message <span class="text-red-500">*</span></label>
                        <textarea name="message" required rows="4" class="w-full border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"><%= testimonial.message %></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Photo & Actions -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Preview Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h2 class="text-lg font-bold text-gray-800 mb-4">Preview</h2>
                <div class="flex flex-col items-center text-center">
                    <div class="w-20 h-20 rounded-full overflow-hidden bg-gray-100 mb-3 border-2 border-white shadow-md">
                        <% if(testimonial.photoUrl) { %>
                            <img src="<%= testimonial.photoUrl %>" alt="Client Photo" class="w-full h-full object-cover">
                        <% } else { %>
                            <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-200">
                                <span class="text-2xl font-bold"><%= testimonial.name.charAt(0) %></span>
                            </div>
                        <% } %>
                    </div>
                    <h3 class="font-bold text-gray-900"><%= testimonial.name %></h3>
                    <p class="text-xs text-gray-500"><%= testimonial.position %></p>
                </div>
            </div>

            <!-- Photo Upload Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="fas fa-user-circle text-purple-500"></i> Update Photo
                </h2>
                
                <div class="space-y-4">
                    <div class="border-2 border-dashed border-gray-200 rounded-lg p-6 text-center hover:bg-gray-50 transition-colors relative">
                        <input type="file" name="photo" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer">
                        <div class="text-gray-400">
                            <i class="fas fa-camera text-3xl mb-2"></i>
                            <p class="text-sm font-medium">Click to replace photo</p>
                            <p class="text-xs">Leave blank to keep current</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <h2 class="text-lg font-bold text-gray-800 mb-4">Actions</h2>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 rounded-lg transition-colors flex items-center justify-center gap-2 shadow-lg shadow-blue-500/30">
                    <i class="fas fa-save"></i> Update Testimonial
                </button>
            </div>
        </div>
    </form>
</div>
