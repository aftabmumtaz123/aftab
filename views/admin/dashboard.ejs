                    </button>
                    <button id="modal-delete-btn" class="px-4 py-2.5 text-red-600 hover:bg-red-50 rounded-xl font-medium transition-colors" title="Delete">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // --- Inbox Logic ---
    
    // Smart Date Formatter
    function formatSmartDate(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        const diff = now - date;
        const oneDay = 24 * 60 * 60 * 1000;
        
        if (diff < oneDay && now.getDate() === date.getDate()) {
            return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        } else if (diff < oneDay * 2 && now.getDate() !== date.getDate()) {
            return 'Yesterday';
        } else {
            return date.toLocaleDateString([], { day: 'numeric', month: 'short' });
        }
    }

    // Initialize Dates
    document.querySelectorAll('.message-date').forEach(el => {
        const rawDate = el.closest('.message-item').dataset.date;
        el.textContent = formatSmartDate(rawDate);
    });

    // Search & Filter
    const searchInput = document.getElementById('message-search');
    const filterSelect = document.getElementById('message-filter');
    const messageItems = document.querySelectorAll('.message-item');

    function filterMessages() {
        const query = searchInput.value.toLowerCase();
        const filter = filterSelect.value;

        messageItems.forEach(item => {
            const name = item.dataset.name.toLowerCase();
            const subject = item.dataset.subject.toLowerCase();
            const isRead = item.dataset.read === 'true';
            
            const matchesSearch = name.includes(query) || subject.includes(query);
            const matchesFilter = filter === 'all' || (filter === 'read' && isRead) || (filter === 'unread' && !isRead);

            if (matchesSearch && matchesFilter) {
                item.classList.remove('hidden');
            } else {
                item.classList.add('hidden');
            }
        });
    }

    searchInput.addEventListener('input', filterMessages);
    filterSelect.addEventListener('change', filterMessages);

    // --- Modal Logic ---
    let currentMessageId = null;
    const modal = document.getElementById('message-modal');
    const backdrop = document.getElementById('message-modal-backdrop');
    const card = document.getElementById('message-modal-card');

    function openMessageModal(element) {
        const data = element.dataset;
        currentMessageId = data.id;

        // Populate Data
        document.getElementById('modal-name').textContent = data.name;
        document.getElementById('modal-email').textContent = data.email;
        document.getElementById('modal-subject').textContent = data.subject;
        document.getElementById('modal-message').textContent = data.message;
        
        // Avatar
        const avatar = document.getElementById('modal-avatar');
        avatar.textContent = data.name.charAt(0).toUpperCase();
        // Copy color class from list item
        const sourceAvatar = element.querySelector('.w-10.h-10');
        avatar.className = `w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg mr-2 ${sourceAvatar.classList.value.match(/bg-\w+-100 text-\w+-600/)[0]}`;

        // Date
        const dateObj = new Date(data.date);
        document.getElementById('modal-date').textContent = dateObj.toLocaleDateString([], { day: 'numeric', month: 'long', year: 'numeric' });
        document.getElementById('modal-time').textContent = dateObj.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

        // Actions
        document.getElementById('modal-reply-btn').href = `mailto:${data.email}?subject=Re: ${data.subject}`;
        document.getElementById('modal-delete-btn').onclick = () => {
            closeMessageModal();
            ui.confirm('Delete Message?', 'Are you sure you want to delete this message?', () => {
                submitDelete(currentMessageId);
            });
        };

        // Show Modal
        modal.classList.remove('hidden');
        requestAnimationFrame(() => {
            backdrop.classList.remove('opacity-0');
            card.classList.remove('scale-95', 'opacity-0');
        });

        // Auto-mark as read
        if (data.read === 'false') {
            markAsRead(element);
        }
    }

    function closeMessageModal() {
        backdrop.classList.add('opacity-0');
        card.classList.add('scale-95', 'opacity-0');
        setTimeout(() => {
            modal.classList.add('hidden');
            currentMessageId = null;
        }, 300);
    }

    // Close on backdrop click
    modal.addEventListener('click', (e) => {
        if (e.target === modal || e.target === backdrop) closeMessageModal();
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal.classList.contains('hidden')) closeMessageModal();
    });

    // Mark as Read Logic
    async function markAsRead(element = null) {
        if (!currentMessageId) return;

        try {
            // Optimistic UI Update
            const item = element || document.querySelector(`.message-item[data-id="${currentMessageId}"]`);
            if (item) {
                item.dataset.read = 'true';
                item.querySelector('.unread-dot').classList.remove('bg-red-500');
                item.querySelector('.unread-dot').classList.add('bg-transparent');
                
                // Update fonts
                item.querySelectorAll('.font-bold').forEach(el => {
                    if(el.tagName === 'P' || el.tagName === 'SPAN') {
                        el.classList.remove('font-bold');
                        el.classList.add('font-medium');
                    }
                });

                // Update Counter
                const counter = document.getElementById('unread-count');
                const currentCount = parseInt(counter.textContent);
                if (currentCount > 0) counter.textContent = currentCount - 1;
            }

            // Backend Call
            await fetch(`/admin/contacts/${currentMessageId}/read`, { method: 'POST' });
        } catch (err) {
            console.error('Failed to mark as read', err);
        }
    }

    // Delete Logic
    function deleteMessage(event, id) {
        event.stopPropagation();
        ui.confirm('Delete Message?', 'Are you sure you want to delete this message?', () => {
            submitDelete(id);
        });
    }

    function submitDelete(id) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/contacts/${id}/delete`;
        document.body.appendChild(form);
        form.submit();
    }
</script>
