<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Content Distribution Chart
    const ctxContent = document.getElementById('contentChart').getContext('2d');
    const contentChart = new Chart(ctxContent, {
        type: 'doughnut',
        data: {
            labels: ['Projects', 'Skills', 'Experience', 'Testimonials'],
            datasets: [{
                data: [<%= stats.projectCount %>, <%= stats.skillCount %>, <%= stats.experienceCount %>, <%= stats.testimonialCount %>],
                backgroundColor: [
                    '#3b82f6', // Blue
                    '#10b981', // Emerald
                    '#8b5cf6', // Violet
                    '#f59e0b'  // Amber
                ],
                borderWidth: 0,
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '75%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        padding: 20,
                        font: {
                            family: "'Inter', sans-serif",
                            size: 12,
                            weight: '500'
                        },
                        color: '#6b7280'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(255, 255, 255, 0.9)',
                    titleColor: '#1f2937',
                    bodyColor: '#4b5563',
                    borderColor: '#e5e7eb',
                    borderWidth: 1,
                    padding: 12,
                    boxPadding: 6,
                    usePointStyle: true,
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.parsed || 0;
                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                            const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                            return ` ${label}: ${value} (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });

    // Views Analysis Chart (Top Projects)
    <% if(topProjects && topProjects.length > 0) { %>
        const ctxViews = document.getElementById('viewsChart').getContext('2d');
        const viewsChart = new Chart(ctxViews, {
            type: 'bar',
            data: {
                labels: [<%- topProjects.map(p => `"${p.title}"`).join(',') %>],
                datasets: [{
                    label: 'Clicks / Interest',
                    data: [<%= topProjects.map(p => p.clicks).join(',') %>],
                    backgroundColor: '#3b82f6',
                    borderRadius: 6,
                    barThickness: 20
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(255, 255, 255, 0.9)',
                        titleColor: '#1f2937',
                        bodyColor: '#4b5563',
                        borderColor: '#e5e7eb',
                        borderWidth: 1,
                        padding: 12
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            font: {
                                family: "'Inter', sans-serif",
                                size: 11
                            },
                            color: '#9ca3af'
                        }
                    },
                    y: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            font: {
                                family: "'Inter', sans-serif",
                                size: 12,
                                weight: '500'
                            },
                            color: '#4b5563'
                        }
                    }
                }
            }
        });
    <% } %>

    // Save dashboard data to IndexedDB cache
    (async () => {
        try {
            const dashboardData = {
                stats: <%- JSON.stringify(stats) %>,
                recentProjects: <%- JSON.stringify(recentProjects) %>,
                recentSkills: <%- JSON.stringify(recentSkills) %>,
                topProjects: <%- JSON.stringify(topProjects || []) %>
            };
            await dashboardCache.save(dashboardData);
            console.log('Dashboard data cached to IndexedDB');
        } catch (err) {
            console.error('Failed to cache dashboard data:', err);
        }
    })();
</script>

