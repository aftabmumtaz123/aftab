<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Content Distribution Chart -->
    <div class="bg-white rounded-2xl shadow-[0_2px_10px_-3px_rgba(6,81,237,0.1)] p-6 border border-gray-100">
        <h3 class="font-bold text-gray-800 text-lg mb-6 flex items-center">
            <div class="p-2 bg-blue-50 rounded-lg mr-3 text-blue-600">
                <i class="fas fa-chart-pie"></i>
            </div>
            Content Distribution
        </h3>
        <div class="relative h-64">
            <canvas id="contentChart"></canvas>
            <!-- Center Text Overlay -->
            <div class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
                <span class="text-3xl font-bold text-gray-800"><%= stats.projectCount + stats.skillCount + stats.experienceCount + stats.testimonialCount %></span>
                <span class="text-xs text-gray-400 uppercase font-medium tracking-wider">Total Items</span>
            </div>
        </div>
    </div>

    <!-- Views Analysis Chart -->
    <div class="bg-white rounded-2xl shadow-[0_2px_10px_-3px_rgba(6,81,237,0.1)] p-6 border border-gray-100">
        <h3 class="font-bold text-gray-800 text-lg mb-6 flex items-center">
            <div class="p-2 bg-amber-50 rounded-lg mr-3 text-amber-600">
                <i class="fas fa-chart-bar"></i>
            </div>
            Top Projects by Interest
        </h3>
        <div class="h-64">
            <% if(topProjects && topProjects.length > 0) { %>
                <canvas id="viewsChart"></canvas>
            <% } else { %>
                <div class="flex flex-col items-center justify-center h-full text-gray-400 bg-gray-50 rounded-xl border-2 border-dashed border-gray-200">
                    <i class="fas fa-chart-line text-3xl mb-2 opacity-50"></i>
                    <p>No project data available yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Content Distribution Chart
    const ctxContent = document.getElementById('contentChart').getContext('2d');
    const contentChart = new Chart(ctxContent, {
        type: 'doughnut',
        data: {
            labels: ['Projects', 'Skills', 'Experience', 'Testimonials'],
            datasets: [{
                data: [<%= stats.projectCount %>, <%= stats.skillCount %>, <%= stats.experienceCount %>, <%= stats.testimonialCount %>],
                backgroundColor: [
                    '#3b82f6', // Blue
                    '#10b981', // Emerald
                    '#8b5cf6', // Violet
                    '#f59e0b'  // Amber
                ],
                borderWidth: 0,
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '75%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        padding: 20,
                        font: {
                            family: "'Inter', sans-serif",
                            size: 12,
                            weight: '500'
                        },
                        color: '#6b7280'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(255, 255, 255, 0.9)',
                    titleColor: '#1f2937',
                    bodyColor: '#4b5563',
                    borderColor: '#e5e7eb',
                    borderWidth: 1,
                    padding: 12,
                    boxPadding: 6,
                    usePointStyle: true,
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.parsed || 0;
                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                            const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                            return ` ${label}: ${value} (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });

    // Views Analysis Chart (Top Projects)
    <% if(topProjects && topProjects.length > 0) { %>
        const ctxViews = document.getElementById('viewsChart').getContext('2d');
        const viewsChart = new Chart(ctxViews, {
            type: 'bar',
            data: {
                labels: [<%- topProjects.map(p => `"${p.title}"`).join(',') %>],
                datasets: [{
                    label: 'Clicks / Interest',
                    data: [<%= topProjects.map(p => p.clicks).join(',') %>],
                    backgroundColor: '#3b82f6',
                    borderRadius: 6,
                    barThickness: 20
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(255, 255, 255, 0.9)',
                        titleColor: '#1f2937',
                        bodyColor: '#4b5563',
                        borderColor: '#e5e7eb',
                        borderWidth: 1,
                        padding: 12
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            font: {
                                family: "'Inter', sans-serif",
                                size: 11
                            },
                            color: '#9ca3af'
                        }
                    },
                    y: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            font: {
                                family: "'Inter', sans-serif",
                                size: 12,
                                weight: '500'
                            },
                            color: '#4b5563'
                        }
                    }
                }
            }
        });
    <% } %>

    // Save dashboard data to IndexedDB cache
    (async () => {
        try {
            const dashboardData = {
                stats: <%- JSON.stringify(stats) %>,
                recentProjects: <%- JSON.stringify(recentProjects) %>,
                recentSkills: <%- JSON.stringify(recentSkills) %>,
                topProjects: <%- JSON.stringify(topProjects || []) %>
            };
            await dashboardCache.save(dashboardData);
            console.log('Dashboard data cached to IndexedDB');
        } catch (err) {
            console.error('Failed to cache dashboard data:', err);
        }
    })();
</script>

