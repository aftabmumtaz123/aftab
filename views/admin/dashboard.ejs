<script>
// Dashboard message modal functions
function openDashboardMessageModal(button) {
    const messageItem = button.closest('.dashboard-message-item');
    
    const name = messageItem.dataset.contactName;
    const email = messageItem.dataset.contactEmail;
    const message = messageItem.dataset.contactMessage;
    const dateStr = messageItem.dataset.contactDate;
    const contactId = messageItem.dataset.contactId;
    const avatarColor = messageItem.dataset.avatarColor;
    const avatarInitial = messageItem.dataset.avatarInitial;
    
    // Update modal content
    const modalAvatar = document.getElementById('dashboardModalAvatar');
    modalAvatar.className = `w-12 h-12 rounded-full ${avatarColor} flex items-center justify-center font-semibold text-lg`;
    modalAvatar.textContent = avatarInitial;
    
    document.getElementById('dashboardModalName').textContent = name;
    document.getElementById('dashboardModalEmail').textContent = email;
    
    // Format date
    const date = new Date(dateStr);
    const dateOptions = { year: 'numeric', month: 'long', day: 'numeric' };
    const timeOptions = { hour: '2-digit', minute: '2-digit' };
    document.getElementById('dashboardModalDate').textContent = date.toLocaleDateString('en-US', dateOptions);
    document.getElementById('dashboardModalTime').textContent = date.toLocaleTimeString('en-US', timeOptions);
    
    // Set subject (first line of message)
    const subject = message.split('\n')[0];
    document.getElementById('dashboardModalSubject').textContent = subject;
    document.getElementById('dashboardModalMessage').textContent = message;
    
    // Store contact info for actions
    document.getElementById('dashboardReplyButton').dataset.email = email;
    document.getElementById('dashboardReplyButton').dataset.subject = subject;
    document.getElementById('dashboardDeleteButton').dataset.contactId = contactId;
    
    // Show modal
    const modal = document.getElementById('dashboardMessageModal');
    modal.classList.remove('hidden');
    modal.classList.add('flex');
}

function closeDashboardMessageModal(event) {
    if(event && event.target !== event.currentTarget) return;
    const modal = document.getElementById('dashboardMessageModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
}

function replyToDashboardMessage() {
    const email = document.getElementById('dashboardReplyButton').dataset.email;
    const subject = document.getElementById('dashboardReplyButton').dataset.subject;
    window.location.href = `mailto:${email}?subject=Re: ${encodeURIComponent(subject)}`;
}

function deleteFromDashboardModal() {
    const contactId = document.getElementById('dashboardDeleteButton').dataset.contactId;
    const form = document.querySelector(`form[action="/admin/contacts/${contactId}/delete"]`);
    if(form) {
        closeDashboardMessageModal();
        // Trigger the confirmation dialog
        ui.confirm('Delete Message?', 'Are you sure you want to delete this message?', () => form.submit());
    }
}

// Close modal on Escape key
document.addEventListener('keydown', function(e) {
    if(e.key === 'Escape') {
        closeDashboardMessageModal();
    }
});
</script>
